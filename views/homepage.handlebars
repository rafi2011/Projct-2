<div>
  {{#if meals.length}}
    <div class="col-md-6 meal-list">
      <h3>All user entries</h3>
        <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Meal</th>
            <th scope="col">User</th>
            <th scope="col">Calories</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
          {{#each meals as |meal|}}
            <tbody>
              <tr>
                <th scope="row">{{meal.id}}</th>
                <td><a href="/meals/{{meal.id}}">{{meal.name}}</a></td>
                <td>{{meal.user.name}}</td>
                <td>{{meal.calories}}</td>
                <td><button class="btn btn-sm btn-danger" data-id="{{meal.id}}">DELETE</button></td>
              </tr>
            </tbody>
          {{/each}}
        </table>
    </div>
    {{/if}}
  </div>

