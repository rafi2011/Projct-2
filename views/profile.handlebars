<div class="row">
  <div class="col-auto">
    <h2>My Profile</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Meal:</h3>

    <form class="form new-meal-form">
      <div class="form-group">
        <label for="project-name">meal name:</label>
        <input class="form-input" type="text" id="meal-name" name="meal-name" />
      </div>
      <div class="form-group">
        <label for="meal-calories">meal calories:</label>
        <input class="form-input" type="number" id="meal-calories" name="meal-calories" />
      </div>
      <div class="form-group">
        <label for="meal-date">meal date:</label>
        <input class="form-input" type="date" id="meal-date" name="meal-date" />
      </div>
      {{#if categories.length}}
        <div class="form-group">
          <label for="category-choice">meal category:</label>
          <select name="category-choice" class="form-control" id="category-choice">
        {{#each categories as |category|}}
        
            <option value="{{category.id}}">{{category.type}}</option>

        {{/each}}
          </select>
        </div>
      {{/if}}
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if meals.length}}
  <div class="col-md-6 meal-list">
    <h3>My meals:</h3>
      <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Meal</th>
          <th scope="col">Category</th>
          <th scope="col">Calories</th>
        </tr>
      </thead>
        {{#each meals as |meal|}}
          <tbody>
            <tr>
              <td>{{meal.mealDate}}</td>              
              <td><a href="/profile/edit/{{meal.id}}">{{meal.name}}</a></td>
              <td>{{meal.category.type}}</td>
              <td>{{meal.calories}}</td>
              <td><button class="btn btn-sm btn-danger" data-id="{{meal.id}}">DELETE</button></td>
            </tr>
          </tbody>
        {{/each}}
      </table>
  </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>
