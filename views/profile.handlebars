<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Meal:</h3>

    <form class="form new-meal-form">
      <div class="form-group">
        <label for="project-name">meal name:</label>
        <input class="form-input" type="text" id="meal-name" name="meal-name" />
      </div>
      <div class="form-group">
        <label for="meal-calories">meal calories:</label>
        <input class="form-input" type="number" id="meal-calories" name="meal-calories" />
      </div>
      <div class="form-group">
        <label for="meal-email">meal email:</label>
        <input class="form-input" type="number" id="meal-email" name="meal-email" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if meals.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each meals as |meal|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{meal.id}}">{{meal.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{meal.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
